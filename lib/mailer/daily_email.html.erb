<%= content_tag :p, 'Ecco i segnali di oggi.'  %>

<table>
  <thead>
    <tr>
      <th>Simbolo</th>
      <th>Nome</th>
      <th>Data chiusura</th>
      <th>Chiusura</th>
      <th>Min anno</th>
      <th>Max anno</th>
      <th>Segnali</th>
      <th>Note</th>
    </tr>
  </thead>

  <% @signals.each do |s| %>
    <tbody>
      <%= content_tag :td, s[:symbol] %>
      <%= content_tag :td, s[:name] %>
      <%= content_tag :td, s[:last_time] %>
      <%= content_tag :td, s[:last_close] %>
      <%= content_tag :td, s[:min_close] %>
      <%= content_tag :td, s[:max_close] %>

      <%= content_tag :td do %>
        <% s[:signals].each do |m| %>
          <%= content_tag :p, m[:message]  %>
        <% end %>
      <% end %>

      <%= content_tag :td do %>
        <% s[:signals].each do |m| %>
          <%= content_tag :p, m[:action], class: m[:action]  %>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</table>
